## -- EXPORTS --
export PI=3.141592
export PATH="$PATH:$HOME/.homemade/bin/system"
export PATH="$PATH:$HOME/.homemade/bin/tools"

## -- ALIASES --
# clipboard
alias copy='xclip -selection clipboard &> /dev/null'
# cat alternative
alias bat='batcat'
# listing with (lsd)
alias lbin='lsd --tree ~/.homemade/bin/'
alias ll='lsd -la'
alias lld='lsd -la --date=relative'
alias la='lsd -a'
alias l='lsd -l'
alias lt='lsd --tree'
