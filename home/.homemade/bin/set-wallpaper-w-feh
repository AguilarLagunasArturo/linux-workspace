#! /usr/bin/env bash

# Author:		Arturo Aguilar Lagunas
# Date:			Thu 09 Sep 2021 01:17:40 AM CDT
# Description:	Set wallpaper with feh

set -e

wallpaper=$HOME/.homemade/rice/current-wallpaper/m0.png
wallpaper_blur=$HOME/.homemade/rice/current-wallpaper/m0-blur.png
BLUR="0x7"

if [[ ! -n $1 ]]; then
    echo -e "$0 <path-to-wallpaper>"
else
    echo -e "$1 -> $wallpaper"
    convert -resize 1920x1920 $1 $wallpaper
    convert $wallpaper -blur $BLUR  $wallpaper_blur
    feh --bg-fill $wallpaper
fi;
