#! /usr/bin/env bash

# Author:       Arturo Aguilar Lagunas
# Description:  Quick script snippet

set -e

author="Author"
header="#! /usr/bin/env bash\n\n# Author:       $author\n# Date:         $(date +'%B %d %Y at %r')\n# Description:  <>"

if [[ ! -n $1 ]]; then
    echo -e "Usage: $0 <filename>"
else
    touch $1
    echo -e "$header" >> $1
    chmod +x $1
    nano $1
fi;
