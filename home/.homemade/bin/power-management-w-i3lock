#! /usr/bin/env bash

# Author:		Arturo Aguilar Lagunas
# Date:			Sun 12 Sep 2021 12:11:55 AM CDT
# Description:	Lockscreen using i3lock and blured screen background
#               inspired by csivanich on github gist id: 10914698
# Dependencies:
#               imagemagick
#               i3lock
#               scrot (optional but default

# Colors
alpha='ee'
none='ff'
full='00'
bg="#090909"

bg_r="#4c0b0b"
bg_g="#062316"
bg_b=$bg

red='#8d1315'
green='#197d3a'
blue='#111111'

type='#ffffff'
delete='#e6ebff'

# Path to temporal image
IMAGE=/tmp/i3lockscreen-bg.png

# Here are some imagemagick blur types
# All options are here: http://www.imagemagick.org/Usage/blur/#blur_args
BLURTYPE="0x7" # ~ 7.52s
#BLURTYPE="0x2" # ~ 4.39s
#BLURTYPE="5x2" # ~ 3.80s
#BLURTYPE="2x8" # ~ 2.90s
#BLURTYPE="2x3" # ~ 2.92s

custom-i3lock() {
    i3lock -i "$1" "$2" \
        --ignore-empty-password \
        --indicator \
        --pass-volume-keys \
        --pass-media-keys \
        --pass-screen-keys \
        --insidecolor=$bg$alpha \
        --insidevercolor=$bg_b$alpha \
        --insidewrongcolor=$bg_r$alpha \
        --ringcolor=$bg$none \
        --ringvercolor=$blue$none \
        --ringwrongcolor=$red$none \
        --line-uses-inside \
        --keyhlcolor=$type$none \
        --bshlcolor=$delete$none \
        --separatorcolor=$bg$full \
        --clock \
        --timestr="%H:%M:%S" \
        --datestr="%A, %b %d %Y" \
        --time-font="Hack Nerd Font" \
        --date-font="Hack Nerd Font" \
        --layout-font="Hack Nerd Font" \
        --verif-font="Hack Nerd Font" \
        --wrong-font="Hack Nerd Font" \
        --greeter-font="Hack Nerd Font" \
        --verifcolor=ffffffff \
        --wrongcolor=ffffffff \
        --greetercolor=ffffffff \
        --layoutcolor=ffffffff \
        --datecolor=ffffffff \
        --timecolor=ffffffff \
        --radius=164 \
        --ring-width=16 \
        --veriftext=" Unlocking" \
        --wrongtext=" Wrong" \
        --noinput=" Empty" \
        --locktext=" Locking" \
        --lockfailed=" Lock Failed"
}

lock() {
    # Just use current background
    # custom-i3lock $HOME/.homemade/rice/current-wallpaper/m0.png

    # Current background + blur (pre-saved)
    custom-i3lock $HOME/.homemade/rice/current-wallpaper/m0-blur.png "-C"

    # Current background + blur
    # convert $HOME/.homemade/rice/current-wallpaper/m0.png -blur $BLURTYPE $IMAGE
    # custom-i3lock $IMAGE "-C"
    # rm $IMAGE
}

lock_current() {
    # Screenshot + blur
    scrot $IMAGE
    convert $IMAGE -blur $BLURTYPE $IMAGE
    custom-i3lock $IMAGE
    rm $IMAGE
}

case "$1" in
    lock)
        lock
        ;;
    lock-current)
        lock_current
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        lock && systemctl suspend
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
